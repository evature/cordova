<?xml version='1.0' encoding='utf-8'?>
<widget id="com.evature.demo" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Evature Demo</name>
    <description>
        Demo of Eva voice search in a Phonegap Application 
    </description>
    <author email="info@evature.com" href="http://www.evature.com">
        Evature
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="com.manueldeveloper.speech-recognizer" spec="~0.0.1" />
    <plugin name="org.apache.cordova.device" spec="~0.3.0" />
    <plugin name="org.apache.cordova.geolocation" spec="~0.3.12" />
    <plugin name="org.apache.cordova.speech.speechsynthesis" spec="~0.1.0" />
    <plugin name="org.apache.cordova.vibration" spec="~0.3.13" />
</widget>
